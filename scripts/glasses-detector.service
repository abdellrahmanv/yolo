[Unit]
Description=YOLOv5 Human Detection - TFLite INT8
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/yolo
ExecStart=/bin/bash /home/pi/yolo/scripts/run_detection.sh --headless
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

# Fast startup optimizations
Nice=-10

[Install]
WantedBy=multi-user.target
